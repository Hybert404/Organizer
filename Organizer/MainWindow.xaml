<Window x:Class="Organizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Organizer"
        mc:Ignorable="d"
        ShowInTaskbar="True" 
        StateChanged="OnStateChanged" 
        IsVisibleChanged="OnIsVisibleChanged"
        Closing="OnClose"
        Name="focusScope1"
        FocusManager.IsFocusScope="True"
        Title="Organizer" Height="540" Width="810" MinHeight="540" MinWidth="810">

    <Window.Resources>
        <ContextMenu x:Key="NotifierContextMenu"
                    Placement="MousePoint">
            <MenuItem Header="Close" Click="Menu_Close"/>
            <MenuItem Header="Open Settings" Click="OpenSettings"/>
        </ContextMenu>
    </Window.Resources>

    <Grid x:Name="Okno">
        <StackPanel Orientation="Horizontal" Height="45" VerticalAlignment="Top">
            <Button Content="Main Window" MinWidth="100" Margin="20,10,0,0" Click="Bttn_Click_MainWindow" />
            <Button Content="Manage Profiles" MinWidth="100" Margin="20,10,0,0" Click="Bttn_Click_ManageProfiles" />
        </StackPanel>
        <Frame x:Name="Main" Margin="0, 35, 0, 0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
