<Page x:Class="Organizer.ProfilesManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Organizer"
      mc:Ignorable="d" 
      d:DesignHeight="500"
      Title="ProfilesManagerPage" Width="1121" HorizontalAlignment="Center" VerticalAlignment="Center">

    <Grid Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}" Height="450" Margin="0,35,0,15" Width="1080" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Here you can manage your profiles" HorizontalAlignment="Left" Margin="266,10,0,0" VerticalAlignment="Top" Height="42" Width="225"/>
        <Grid Height="200" Margin="10,288,670,-38" Width="400">
            <TextBlock TextWrapping="Wrap" Height="31" Width="346" FontSize="20" Margin="10,52,44,116"><Run Language="pl-pl" Text="Create a new profile"/></TextBlock>
            <TextBox x:Name="NewProfileTextBox" TextWrapping="Wrap" Width="170" Height="33" FontSize="20" HorizontalAlignment="Left" Margin="10,64,0,54" VerticalAlignment="Center"/>
            <TextBlock IsHitTestVisible="False" Text="Profile name" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="DarkGray" Padding="10,10,0,0">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=NewProfileTextBox}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <Button Content="Add new profile" HorizontalAlignment="Left" Margin="190,88,0,0" VerticalAlignment="Top" Height="34" Width="116" Click="Bttc_Click_Add_profile"/>
        </Grid>
        <ListBox x:Name="processList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="848,86,10,86" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} - {1}">
                                <Binding Path="ProcessName"/>
                                <Binding Path="MainWindowTitle"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="ListProcBttn" Content="List procesess" HorizontalAlignment="Left" Margin="848,369,0,0" VerticalAlignment="Top" Height="38" Width="118" Click="ListProcBttn_Click"/>
        <Label Content="Running processes" HorizontalAlignment="Left" Margin="848,60,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="listGrupa" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="287,86,580,229">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}Id: {0} - {1}">
                                <Binding Path="Id_prog"/>
                                <Binding Path="Name"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="Group of processes" HorizontalAlignment="Left" Margin="287,60,0,0" VerticalAlignment="Top" Width="152" Height="26"/>
        <Button x:Name="Przesun" Content="&lt;" HorizontalAlignment="Left" Height="24" Margin="805,108,0,0" VerticalAlignment="Top" Width="38" Click="Przesun_Click"/>
        <Button x:Name="BttnSaveToProf" Content="Save to profile" HorizontalAlignment="Left" Height="27" Margin="620,226,0,0" VerticalAlignment="Top" Width="106" Click="BttnSaveToProf_Click"/>
        <ListBox x:Name="profileList" HorizontalAlignment="Left" Height="236" Margin="10,86,0,0" VerticalAlignment="Top" Width="252" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="profileSelectionChange">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0}">
                                <Binding Path="Name"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="Your profiles" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="152" Height="26"/>
        <Button x:Name="BttnlistPrograms" Content="List programs" HorizontalAlignment="Left" Margin="630,270,0,0" VerticalAlignment="Top" Height="30" Width="86" Click="BttnlistPrograms_Click"/>
        <CheckBox x:Name="Minima" Content="Min" HorizontalAlignment="Left" Height="27" Margin="566,238,0,0" VerticalAlignment="Top" Width="70"/>
        <CheckBox x:Name="Maxima" Content="Max" HorizontalAlignment="Left" Height="25" Margin="566,260,0,0" VerticalAlignment="Top" Width="62"/>
        <Button Content="get parameters" HorizontalAlignment="Left" Margin="451,380,0,0" VerticalAlignment="Top" Height="47" Width="97" Click="Button_Click"/>
        <ListBox x:Name="listGrupaToSave" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="566,86,300,229">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat=" {0} - {1}">
                                <Binding Path="ProcessName"/>
                                <Binding Path="MainWindowTitle"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="BttnAddPathManual" HorizontalAlignment="Left" Margin="267,285,0,0" VerticalAlignment="Top" Height="37" Width="111" Click="BttnAddPathManual_Click">
            <TextBlock Text="Add the file path manually" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
    </Grid>
</Page>
